        xmlns:local="clr-namespace:Module10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="99,44,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
