        <TextBlock x:Name="readoutTextBlock" HorizontalAlignment="Left" Height="156" Margin="10,253,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="callServiceButton" Content="CallService" HorizontalAlignment="Left" Margin="537,44,0,0" VerticalAlignment="Top" Width="75" Click="callServiceButton_Click"/>

    </Grid>
</Window>
